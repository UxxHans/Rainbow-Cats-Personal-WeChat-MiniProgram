{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "typescript"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "typescript/no-unused-vars": "warn",
    "semi": [
      "warn",
      "never"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  }
}