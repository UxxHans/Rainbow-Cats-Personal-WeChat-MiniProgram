{
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "typescript"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "semi": [
      "warn",
      "never"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-console": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  }
}
